<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/md_theme_background"
    android:padding="16dp"
    tools:context=".ui.Permisos.PermisosFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Título principal -->
        <TextView
            android:id="@+id/texto_titulo_bienvenida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Configuración Requerida"
            android:textAppearance="?attr/textAppearanceHeadlineMedium"
            android:textColor="@color/md_theme_onBackground" />

        <!-- Tarjeta de Permiso de Accesibilidad -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_informacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_accessibility"
                        app:tint="?attr/colorPrimary" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_weight="1"
                        android:text="Servicio de Accesibilidad"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        android:textColor="@color/md_theme_onSurface" />
                </LinearLayout>

                <TextView
                    android:id="@+id/texto_explicacion_accesibilidad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:lineSpacingExtra="4dp"
                    android:text="@string/explicacion_permiso_accesibilidad"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="@color/md_theme_onSurfaceVariant" />

                <TextView
                    android:id="@+id/texto_explicacion_adicional_permisos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Nota: Por seguridad, es posible que el sistema Android te pida reactivar este permiso periódicamente."
                    android:textAppearance="?attr/textAppearanceBodySmall"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:visibility="gone"
                    tools:visibility="visible"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/boton_ir_a_ajustes_accesibilidad"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:icon="@drawable/ic_security"
                    app:iconGravity="textStart"
                    android:text="@string/boton_activar_servicio_accesibilidad" />

                <TextView
                    android:id="@+id/texto_estado_permiso"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="Estado: Pendiente"
                    android:textAppearance="?attr/textAppearanceBodySmall"
                    android:textColor="?attr/colorError" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Tarjeta de Optimización de Batería -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_bateria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_battery_alert"
                        app:tint="?attr/colorPrimary" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_weight="1"
                        android:text="Optimización de Batería"
                        android:textAppearance="?attr/textAppearanceTitleMedium"                        android:textColor="@color/md_theme_onSurface" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:lineSpacingExtra="4dp"
                    android:text="Para que el servicio funcione sin interrupciones, desactiva la optimización de batería para Kairos."
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="@color/md_theme_onSurfaceVariant" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/boton_ir_a_ajustes_bateria"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:icon="@drawable/ic_security"
                    app:iconGravity="textStart"
                    android:text="Quitar Optimización" />

                <TextView
                    android:id="@+id/texto_estado_bateria"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="Estado: Pendiente"
                    android:textAppearance="?attr/textAppearanceBodySmall"
                    android:textColor="?attr/colorError" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
        <!-- Tarjeta de Permiso de Auto-inicio -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_autoinicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_security"
                        app:tint="?attr/colorPrimary" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_weight="1"
                        android:text="Permiso de Auto-inicio"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        android:textColor="@color/md_theme_onSurface" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:lineSpacingExtra="4dp"
                    android:text="En algunos dispositivos (Xiaomi, Huawei, etc.), es necesario dar permiso a Kairos para que se inicie automáticamente y así asegurar que el servicio no sea interrumpido."
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="@color/md_theme_onSurfaceVariant" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/boton_ir_a_ajustes_autoinicio"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:icon="@drawable/ic_security"
                    app:iconGravity="textStart"
                    android:text="Abrir Ajustes de Auto-inicio" />


            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>


        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <!-- Botón secundario para continuar -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/boton_continuar_a_principal"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_marginTop="8dp"
            android:text="@string/boton_continuar"
            android:visibility="gone"
            app:icon="@drawable/ic_arrow_forward"
            app:iconGravity="textEnd"
            app:iconPadding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/texto_estado_permiso"
            tools:visibility="visible" />

        <!-- Footer con información adicional -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Tu seguridad y privacidad son importantes"
            android:textAppearance="?attr/textAppearanceBodySmall"
            android:textColor="@color/md_theme_outline"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/boton_continuar_a_principal" />
    </LinearLayout>
</ScrollView>