<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contenedor_principal_fragmento_indrive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        tools:context=".ui.indrive.FragmentoIndrive">

        <!-- Sección 1: Configuración de Distancia de Recogida en una Tarjeta -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_distancia_recogida"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/etiqueta_config_distancia"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/etiqueta_distancia_maxima"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layout_campo_distancia_maxima"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/etiqueta_config_distancia">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/campo_distancia_maxima"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/pista_ingresar_distancia_km"
                        android:inputType="numberDecimal" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/boton_guardar_config_distancia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/boton_guardar_distancia"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/layout_campo_distancia_maxima" />

                <TextView
                    android:id="@+id/texto_distancia_guardada_actualmente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/boton_guardar_config_distancia"
                    android:layout_marginTop="8dp"
                    tools:text="Distancia actual guardada: 5.0 km" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Sección 2: Configuración de Tarifa por Kilómetro en una Tarjeta -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_tarifa"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/card_distancia_recogida"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/etiqueta_config_tarifa"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/etiqueta_config_tarifa"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layout_campo_tarifa_km"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/etiqueta_config_tarifa">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/campo_tarifa_km"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/pista_ingresar_tarifa"
                        android:inputType="number" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/boton_guardar_tarifa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/boton_guardar_tarifa"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/layout_campo_tarifa_km" />

                <TextView
                    android:id="@+id/texto_tarifa_guardada"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/boton_guardar_tarifa"
                    tools:text="Tarifa actual: COL$2,500 por km" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Sección 3: Distancia Máxima del Viaje (A-B) en una Tarjeta -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_distancia_viaje_ab"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/card_tarifa"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/etiqueta_config_distancia_viaje_ab"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/etiqueta_distancia_maxima_viaje_ab"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layout_campo_distancia_maxima_viaje_ab"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/etiqueta_config_distancia_viaje_ab">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/campo_distancia_maxima_viaje_ab"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/pista_ingresar_distancia_viaje_ab_km"
                        android:inputType="numberDecimal" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/boton_guardar_config_distancia_viaje_ab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/boton_guardar_distancia_viaje_ab"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/layout_campo_distancia_maxima_viaje_ab" />

                <TextView
                    android:id="@+id/texto_distancia_viaje_ab_guardada"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/boton_guardar_config_distancia_viaje_ab"
                    tools:text="Distancia máxima de viaje A-B: 15.0 km" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>